<script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
<script>
  tinymce.init({
  selector:'textarea',
  plugins: 'image textpattern autoresize',
  width: '100%',
  height: 300,
  });
</script>


<section class="blog">
  <h2>This is the Blog Input Page</h2>

  <div class="field row" id="field_open_slots">
    <div class="">
      <form role="form" method="POST" class="form-horizontal blog-input" id="form1" action="/blog_save">
        <input type="hidden" class="date" value="<%= Date.today.to_s %>" name="date">
        <div class="form-group">
          <label for="title">Title of Log</label>
          <input class="title-input" type="text" name="title">
        </div>
        <div class="form-group">
          <label for="tags">Tags used in this Documentation</label>
          <input class="tags-input" type="text" name="tags">
        </div>
        <div class="form-group content-input text-center">
          <label for="content">Content for Log</label>
          <textarea class="content-input" form="form1" name="content"></textarea>
        </div>
        <hr>
        <div class="blog-button">
          <button type="submit" form="form1" value="Submit">Submit</button>
        </div>
      </form>
      <!-- /.form-group -->
    </div>
    <!-- /.col -->
  </div>








</section>